{
  "name": "api-boilerplate",
  "version": "1.0.0",
  "description": "A simple express api boilerplate.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "deploy": "git push heroku master",
    "lint": "eslint ./ --ignore-path .gitignore --ignore-pattern internals/scripts",
    "depcheck": "npx depcheck",
    "pre-commit": "npm run lint && npm run depcheck",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Fabrizio Zaffarana <fzaffarana@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.19.2",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^3.21.3",
    "http-status": "^1.4.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "depcheck": "^0.9.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run pre-commit"
    }
  },
  "lint-staged": {
    "*.{js,json": [
      "prettier --write"
    ]
  }
}
